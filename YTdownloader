#https://www.youtube.com/watch?v=3w-2gUSus34

def save():
    link = entrylink.get()
    yt = YouTube(link)
    print(f"Title: {yt.title}")
    ys = yt.streams.get_highest_resolution()
    Label(root, background="grey", text="Downloading... " + yt.title).pack()
    ys.download("F:\YT")
    Label(root, background="grey", text="Download completed!").pack()
    Label(root, background="grey", text="Localisation - " + ys.download("F:\YT")).pack()



root = Tk()
root.title("YouTube Downloader")
root.config(background="grey")
root.geometry("600x600")
root.resizable(False, False)

label1 = Label(root,
    text="Welcome to YouTube downloader!",
    font=("arial fat", 25), 
    foreground="black",
    background="white",)
label1.pack(anchor=CENTER)

label2 = Label(root,
    text="Insert link of the video You would want to download: ",
    font=("arial fat", 15),
    foreground="red",
    background="white",)
label2.pack(anchor=CENTER)

entrylink = Entry(root,
    width=80,
    borderwidth=5,
    )
entrylink.pack(anchor=CENTER)

button1 = Button(root,
text="OK",
command=save)
button1.pack(anchor=CENTER)


root.mainloop()
